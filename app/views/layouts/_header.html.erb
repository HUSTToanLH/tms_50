<div class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to t("layouts.title"), root_path, class: "navbar-brand" %>
    </div>
    <ul class="nav navbar-nav">
      <% if user_signed_in? %>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle",
            data: {toggle: "dropdown"} do %>
            <%= t "account.string" %><b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li>
              <%= link_to t("account.profile"), user_path(current_user) %>
            </li>
            <li><%= link_to t("account.settings"),
              edit_user_registration_path %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("layouts.log_out"), destroy_user_session_path,
                method: :delete %>
            </li>
          </ul>
        </li>
        <li><%= link_to t("layouts.home"), root_path %></li>
      <% else %>
        <li><%= link_to t("layouts.log_in"), new_user_session_path %></li>
      <% end %>
    </ul>
  </div>
</div>
