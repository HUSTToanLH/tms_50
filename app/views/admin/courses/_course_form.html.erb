<div class="col-md-6 col-md-offset-1 panel panel-default">
  <div class="text-center">
    <h3><%= link_to t("courses.new_course"), admin_courses_path %></h3>
    <hr>
  </div>
  <%= form_for [:admin, @course] do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <p><%= f.label :name, t("courses.name") %></p>
    <p><%= f.text_field :name, class: "form-control" %></p>
    <p><%= f.label :description, t("courses.description") %></p>
    <p><%= f.text_area :description, class: "form-control" %><p>
    <%= f.fields_for :course_subjects do |builder| %>
      <%= render "course_subject_fields", f: builder %>
    <% end %>
    <p>
      <%= link_to_add_fields t("courses.add_field"), f, :course_subjects %>
    </p>
    <%= f.submit t("courses.submit"),
      class: "btn btn-primary col-md-4 col-md-offset-4" %>
  <% end %>
</div>
