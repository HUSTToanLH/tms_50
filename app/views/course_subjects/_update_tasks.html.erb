<%= form_for @user_subject do |f| %>
  <ul class="list-unstyled">
    <h3>Tasks</h3>
    <hr>
    <%= f.collection_check_boxes :course_subject_task_ids,
      @course_subject_tasks, :id, :name_with_initial do |b| %>
      <li>
        <%= b.label {b.check_box + "  " + b.text} %><br/>
      </li>
    <% end %>
  </ul>
  <%= hidden_field_tag :update, true %>
  <div class="col-md-12">
    <div class="col-md-4 col-md-offset-4">
      <p>
        <%= f.submit t("subject.update"),
          class: "btn btn-lg btn-primary btn-block" %>
      </p>
    </div>
  </div>
  <div class="col-md-12">
    <div class="col-md-4 col-md-offset-4">
      <p>
        <% if @user_subject.finished? %>
          <%= link_to t("subject.finish"),
            user_subject_path((@user_subject),
            "user_subject[status]": "Finished"), method: :put,
            class: "btn btn-lg btn-success btn-block" %>
        <% end %>
      </p>
    </div>

  <div class="col-md-3 col-md-offset-3">
    <%= f.submit t("subject.update"), class: "btn btn-default btn-block" %>
  </div>
<% end %>

<div class="col-md-3">
  <%= form_for @user_subject do |f| %>
    <%= f.hidden_field :status, value: :finished %>
    <%= f.submit t("subject.finish"), class: "btn btn-default btn-block" %>
  <% end %>
</div>

